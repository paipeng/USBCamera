<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.paipeng.usbcamera.MainActivity"
    tools:ignore="MergeRootFrame" >

    <com.paipeng.usbcamera.widget.SimpleUVCCameraTextureView
        android:id="@+id/UVCCameraTextureView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"/>

    <com.paipeng.usbcamera.widget.OverlayView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/transparent_rect"
        android:id="@+id/overlayView">

    </com.paipeng.usbcamera.widget.OverlayView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/camera_button"
            android:layout_width="145dp"
            android:layout_height="66dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="86dp"
            android:layout_marginEnd="178dp"
            android:layout_marginBottom="28dp"
            android:contentDescription="@string/camera"
            android:scaleType="centerCrop"
            android:src="@android:drawable/ic_menu_camera" />

        <Button
            android:id="@+id/registerButton"
            android:layout_width="72dp"
            android:layout_height="63dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="261dp"
            android:layout_marginBottom="28dp"
            android:contentDescription="@string/camera"
            android:text="Reg" />

        <ImageView
            android:id="@+id/previewImageView"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="427dp"
            android:background="@color/BLACK"
            tools:src="@android:drawable/ic_menu_camera" />

        <ImageView
            android:id="@+id/registImageView"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="242dp"
            android:layout_marginBottom="427dp"
            android:background="@color/BLACK"
            tools:src="@android:drawable/ic_menu_camera" />

        <TextView
            android:id="@+id/authResultTextView"
            android:layout_width="187dp"
            android:layout_height="51dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="113dp"
            android:layout_marginEnd="111dp"
            android:layout_marginBottom="94dp"
            android:background="@color/BISQUE"
            android:text="TextView" />

        <ImageView
            android:id="@+id/resultImageView"
            android:layout_width="wrap_content"
            android:layout_height="195dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="56dp"
            android:layout_marginEnd="57dp"
            android:layout_marginBottom="190dp"
            android:src="@drawable/verified_stamp" />

    </RelativeLayout>
</FrameLayout>
